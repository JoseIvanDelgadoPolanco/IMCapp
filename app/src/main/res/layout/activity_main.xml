<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.user.imcapp.MainActivity"
    android:weightSum="1"
    android:background="@drawable/calculadora_deportivas"
    android:backgroundTint="@android:color/holo_purple">

    <TextView
        android:text="Proporcione el peso en kilogramos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/edit_text_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text=""
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Proporcione la estatura en metros"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/edit_text_estatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:id="@+id/boton_calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="calcular"
            android:background="@android:color/holo_purple"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            />
        <Button
            android:id="@+id/boton_limpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Limpiar"
            android:background="@android:color/holo_purple"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="El Indice de Masa Corporal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textStyle="bold"
        android:layout_margin="22dp"
        />
    <TextView
        android:id="@+id/text_view_imc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text=""
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="clasificacion"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/text_view_clasificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text=""
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.43"
        android:src="@mipmap/i_m_c" />

</LinearLayout>
